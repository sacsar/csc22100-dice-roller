<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="csc22100.diceroller.dicerollergui.SettingsController">
    <VBox>
        <Label labelFor="$numDice">Number of dice</Label>
        <ChoiceBox fx:id="numDice"/>
        <Label labelFor="$diceType">Dice Type</Label>
        <ChoiceBox fx:id="diceType"/>
        <ButtonBar>
            <buttons>
                <Button fx:id="cancelButton" text="Cancel"/>
                <Button fx:id="saveButton" text="Save"/>
            </buttons>
        </ButtonBar>
    </VBox>
</AnchorPane>

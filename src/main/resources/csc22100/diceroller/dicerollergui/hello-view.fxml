<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="csc22100.diceroller.dicerollergui.HelloController">
    <MenuBar VBox.vgrow="NEVER">
        <Menu text="File">
            <MenuItem fx:id="quit" text="Quit" />
        </Menu>
    </MenuBar>
    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <Label fx:id="roll">
         <font>
            <Font size="24.0" />
         </font></Label>
        <Button fx:id="button" onAction="#onRoll" text="Roll" />
    </VBox>
</VBox>
